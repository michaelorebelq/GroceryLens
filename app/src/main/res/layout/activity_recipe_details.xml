<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@drawable/roundedcorner" />

        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/recipeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 30 mins | Servings: 4 | Calories: 320 kcal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="6dp"
            android:textColor="#444444"
            />


        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textColor="#000000"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/recipeIngredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 2 eggs\n• 1 cup milk"
            android:textSize="16sp"
            android:textColor="#444444"
            android:paddingTop="4dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textColor="#000000"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Preheat oven...\n2. Mix the ingredients..."
            android:textSize="16sp"
            android:textColor="#444444"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/btnAddFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_to_favorites"
            android:textSize="16sp"
            android:background="@drawable/roundedcorner"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnSearchAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_again"
            android:textSize="16sp"
            android:background="@drawable/roundedcorner"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
